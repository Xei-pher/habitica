<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Habitica - Home</title>
    <link href="css/bootstrap-5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }

      /* Custom color style */
      .text-custom {
        color: #4e89ae !important;
        font-family: 'Montserrat', Arial, sans-serif;
      }

      .bg-custom {
        background-color: #4e89ae !important;
      }

      .border-custom {
        border-color: #4e89ae !important;
      }
      #calendar {
        
        width: 80%; /* Adjust the width as needed */
        height: 400px; /* Adjust the height as needed */
        
      }
      .btn-custom {
        background-color: #4e89ae;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        }

        .btn-custom:hover {
        background-color: #3a698f;
        }

        /* Modal styles */
      .modal {
        display: none; 
        position: fixed; 
        z-index: 1; 
        left: 0; 
        top: 0; 
        width: 100%; 
        height: 100%; 
        overflow: auto; 
        background-color: rgb(0,0,0); 
        background-color: rgba(0,0,0,0.4); 
      }

      .modal-content {
        background-color: #fefefe;
        margin: 15% auto; 
        padding: 20px;
        border: 1px solid #888;
        width: 80%; 
        max-width: 500px;
      }

      .modal-header {
        padding: 10px;
        border-bottom: 1px solid #eee;
      }

      .modal-body {
        padding: 10px;
      }

      .modal-footer {
        padding: 10px;
        border-top: 1px solid #eee;
        text-align: right;
      }

      .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
      }

      .close:hover,
      .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
      }

      /* Alert message styles */
      .alert {
        opacity: 1;
        transition: opacity 0.5s ease-out;
        position: fixed;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        padding: 10px 20px;
        background-color: #147517;
        color: white;
        border-radius: 5px;
        z-index: 1000;
      }

      .alert.fade-out {
        opacity: 0;
      }

      .btn-danger-custom {
          background-color: #dc3545;
          color: #fff;
          border: none;
          padding: 10px 20px;
          font-size: 16px;
          border-radius: 5px;
      }

      .btn-danger-custom:hover {
          background-color: #c82333;
      }
    </style>
    <link href="css/headers.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom border-custom">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
            <span class="fs-4 text-custom">Welcome to Habitica, <%= fname %>!</span>
          </a>
    
          <ul class="nav nav-pills">
            <li class="nav-item"><a href="/" class="nav-link text-custom">Home</a></li>
            <li class="nav-item"><a href="/habits" class="nav-link active bg-custom text-white" aria-current="page">My Habits</a></li>
            <li class="nav-item"><a href="#" class="nav-link text-custom">About</a></li>
            <li class="nav-item"><a href="/logout" class="nav-link text-custom">Log Out</a></li>
          </ul>
        </header>
    </div>
    <div class="b-example-divider"></div>
    <br>
    <center><h1>My Habits</h1></center>
    <br>
    <center>
      <button class="btn btn-custom" id="openModal">Create New Habit</button>
    </center>
    <!-- System Messages table -->
    <% if (messages && messages.success) { %>
      <div class="alert" id="success-alert">
          <%= messages.success %>
      </div>
  <% } %>

  <% if (messages && messages.error) { %>
      <div class="alert" id="error-alert" style="background-color: red;">
          <%= messages.error %>
      </div>
  <% } %>
  <!-- Habits table -->
  <div class="container mt-5">
    <div class="row">
        <% habits.forEach(habit => { %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><%= habit.title %></h5>
                        <p class="card-text"><%= habit.description %></p>
                        <p class="card-text"><strong>Frequency:</strong> <%= habit.frequency %></p>
                        <button class="btn btn-danger-custom" onclick="deleteHabit('<%= habit._id %>')">Delete</button>
                        <button class="btn btn-custom" onclick="editHabit('<%= habit._id %>')">Edit</button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

    <!-- Add Modal -->
<div id="myModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Create New Habit</h2>
        <span class="close" id="closeModal">&times;</span>
      </div>
      <div class="modal-body">
        <form id="habitForm" action="/createhabit" method="POST">
          <div class="mb-3">
            <label for="habitTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="habitTitle" name="title" required>
          </div>
          <div class="mb-3">
            <label for="habitDescription" class="form-label">Description</label>
            <textarea class="form-control" id="habitDescription" name="description"></textarea>
          </div>
          <div class="mb-3">
            <label for="habitFrequency" class="form-label">Frequency</label>
            <select class="form-select" id="habitFrequency" name="frequency" required>
              <option value="" disabled selected>Select frequency</option>
              <option value="daily">Daily</option>
              <option value="weekly">Weekly</option>
            </select>
          </div>
          <button type="submit" class="btn btn-custom">Save Habit</button>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-custom" id="closeModalFooter">Close</button>
      </div>
    </div>
  </div>
  <!-- Delete Modal -->
  <div id="deleteModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Confirm Deletion</h2>
        <span class="close" id="closeDeleteModal">&times;</span>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this habit?</p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-danger-custom" id="confirmDelete">Delete</button>
        <button class="btn btn-custom" id="cancelDelete">Cancel</button>
      </div>
    </div>
  </div>
  <!-- Edit Modal -->
    <script>
      // Get the modal
      var modal = document.getElementById("myModal");

      // Get the button that opens the modal
      var btn = document.getElementById("openModal");

      // Get the <span> element that closes the modal
      var span = document.getElementById("closeModal");
      var closeFooter = document.getElementById("closeModalFooter");

      // When the user clicks the button, open the modal 
      btn.onclick = function() {
        modal.style.display = "block";
      }

      // When the user clicks on <span> (x), close the modal
      span.onclick = function() {
        modal.style.display = "none";
      }

      closeFooter.onclick = function() {
        modal.style.display = "none";
      }

      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }

      // Fade out alerts
      window.onload = function() {
        var successAlert = document.getElementById("success-alert");
        var errorAlert = document.getElementById("error-alert");

        if (successAlert) {
          setTimeout(function() {
            successAlert.classList.add("fade-out");
          }, 1000); // Show for 3 seconds
        }

        if (errorAlert) {
          setTimeout(function() {
            errorAlert.classList.add("fade-out");
          }, 1000); // Show for 3 seconds
        }
      }
      
      function deleteHabit(id) {
        const deleteModal = document.getElementById("deleteModal");
        const confirmDelete = document.getElementById("confirmDelete");
        const cancelDelete = document.getElementById("cancelDelete");
        const span = document.getElementById("closeDeleteModal");
        deleteModal.style.display = "block";

        confirmDelete.onclick = function() {
          window.location.href = "/deletehabit/" + id;
        }

        cancelDelete.onclick = function() {
          deleteModal.style.display = "none";
        }
        
        span.onclick = function() {
          deleteModal.style.display = "none";
        
      }
    }
      function editHabit(id) {
        
      }
    </script>
</body>
</html>
